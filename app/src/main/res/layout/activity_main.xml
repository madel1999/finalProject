<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="634dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productmanager"
            android:layout_width="268dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/productmanager" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            app:srcCompat="@drawable/screenshot_2025_06_08_120832_photoroom" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="256dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="30dp"
            android:paddingBottom="12dp"
            android:text="Search result will appear here"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editId"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Enter Product ID"
            android:inputType="number"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Enter Product Name"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:hint="Enter Product Price"
            android:inputType="number"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_marginEnd="2.5dp"
                android:layout_weight="1"
                android:backgroundTint="#084aac"
                android:text="Save"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#084aac"
                android:text="Search"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#084aac"
                android:text="Update"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="#084aac"
                android:paddingRight="24dp"
                android:text="Delete"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>